<?php/** * Elementor Widget * @package Appside * @since 1.0.0 */namespace Elementor;class wphex_Product_Features extends Widget_Base {    /**     * Get widget name.     *     * Retrieve Elementor widget name.     *     * @return string Widget name.     * @since 1.0.0     * @access public     *     */    public function get_name() {        return 'wphex-product-features-list-widget';    }    /**     * Get widget title.     *     * Retrieve Elementor widget title.     *     * @return string Widget title.     * @since 1.0.0     * @access public     *     */    public function get_title() {        return esc_html__( 'Product Features', 'wphex-master' );    }    /**     * Get widget icon.     *     * Retrieve Elementor widget icon.     *     * @return string Widget icon.     * @since 1.0.0     * @access public     *     */    public function get_icon() {        return 'eicon-editor-list-ul';    }    /**     * Get widget categories.     *     * Retrieve the list of categories the Elementor widget belongs to.     *     * @return array Widget categories.     * @since 1.0.0     * @access public     *     */    public function get_categories() {        return [ 'wphex_widgets' ];    }    /**     * Register Elementor widget controls.     *     * Adds different input fields to allow the user to change and customize the widget settings.     *     * @since 1.0.0     * @access protected     */    protected function _register_controls() {        // product features content section starts here        $this->start_controls_section(            'product_features_content',            [                'label' => esc_html__( 'Product Features Content', 'wphex-master' ),                'tab'   => Controls_Manager::TAB_CONTENT,            ]        );        $this->add_control(            'product_features_title',            [                'label' => esc_html__( 'Title', 'wphex-master' ),                'type' => \Elementor\Controls_Manager::TEXT,                'default' => esc_html__( 'Build your Awesome Service Based Website', 'wphex-master' ),                'placeholder' => esc_html__( 'Type your title here', 'wphex-master' ),            ]        );        $this->add_control(            'product_features_description',            [                'label' => esc_html__( 'Description', 'wphex-master' ),                'type' => \Elementor\Controls_Manager::TEXTAREA,                'rows' => 10,                'default' => esc_html__( 'Qixer is a Service Based HTML Template. Itâ€™s the best choice for and any others.', 'wphex-master' ),                'placeholder' => esc_html__( 'Type your description here', 'wphex-master' ),            ]        );        $this->add_control(            'product_features_price',            [                'label' => esc_html__( 'Price', 'wphex-master' ),                'type' => \Elementor\Controls_Manager::TEXT,                'default' => esc_html__( '$39', 'wphex-master' ),                'placeholder' => esc_html__( 'Type your price here', 'wphex-master' ),            ]        );        $this->add_control(            'product_features_button1_text',            [                'label' => esc_html__( 'Button One Text', 'wphex-master' ),                'type' => \Elementor\Controls_Manager::TEXT,                'default' => esc_html__( 'Buy Now', 'wphex-master' ),                'placeholder' => esc_html__( 'Type your title here', 'wphex-master' ),            ]        );        $this->add_control(            'product_features_button1_link',            [                'label' => esc_html__( 'Button One Link', 'wphex-master' ),                'type' => \Elementor\Controls_Manager::URL,                'placeholder' => esc_html__( 'https://your-link.com', 'wphex-master' ),                'options' => [ 'url', 'is_external', 'nofollow' ],                'default' => [                    'url' => '#',                    'is_external' => true,                    'nofollow' => true,                    // 'custom_attributes' => '',                ],                'label_block' => true,            ]        );        $this->add_control(            'product_features_button2_link',            [                'label' => esc_html__( 'Button Two Link', 'wphex-master' ),                'type' => \Elementor\Controls_Manager::URL,                'placeholder' => esc_html__( 'https://your-link.com', 'wphex-master' ),                'options' => [ 'url', 'is_external', 'nofollow' ],                'default' => [                    'url' => '#',                    'is_external' => true,                    'nofollow' => true,                    // 'custom_attributes' => '',                ],                'label_block' => true,            ]        );        $this->add_control(            'product_features_button2_text',            [                'label' => esc_html__( 'Button Two Text', 'wphex-master' ),                'type' => \Elementor\Controls_Manager::TEXT,                'default' => esc_html__( 'Our Product', 'wphex-master' ),                'placeholder' => esc_html__( 'Type your title here', 'wphex-master' ),            ]        );        $this->add_control(            'features_list',            [                'label' => esc_html__( 'Features List', 'wphex-master' ),                'type' => \Elementor\Controls_Manager::REPEATER,                'fields' => [                    [                        'name' => 'features_title',                        'label' => esc_html__( 'Title', 'wphex-master' ),                        'type' => \Elementor\Controls_Manager::TEXT,                        'default' => esc_html__( 'Features List Title.' , 'wphex-master' ),                        'label_block' => true,                    ],                ],                'default' => [                    [                        'list_title' => esc_html__( 'Unique 4 Home Pages.', 'wphex-master' ),                    ],                    [                        'list_title' => esc_html__( 'Fully responsive.', 'wphex-master' ),                    ],                    [                        'list_title' => esc_html__( 'Total 35 Pages.', 'wphex-master' ),                    ],                    [                        'list_title' => esc_html__( 'Seo Optimized.', 'wphex-master' ),                    ],                ],                'title_field' => '{{{ features_title }}}',            ]        );        $this->end_controls_section();        // product features content section ends here    }    /**     * Render Elementor widget output on the frontend.     *     * Written in PHP and used to generate the final HTML.     *     * @since 1.0.0     * @access protected     */    protected function render() {        $settings = $this->get_settings_for_display();        ?>        <div class="single_feature">            <h3 class="single_feature__title"><?php echo esc_html( $settings['product_features_title'] ); ?></h3>            <p class="single_feature__para mt-4"><?php echo esc_html( $settings['product_features_description'] ); ?></p>            <div class="single_feature__inner mt-4">                <ul class="single_feature__list">                    <?php if ( ! empty( $settings['features_list'] ) ) : foreach( $settings['features_list'] as $features_list_item ) : ?>                        <li class="single_feature__list__item"><?php echo esc_html( $features_list_item['features_title'] ); ?>.</li>                    <?php endforeach; endif; ?>                </ul>                <h4 class="single_feature__price mt-4"><?php echo esc_html( $settings['product_features_price'] ); ?></h4>            </div>            <div class="btn-wrapper flex-btn gap-2 mt-4">                <a href="<?php echo esc_url( $settings['product_features_button1_link']['url'] ); ?>" class="cmn-btn btn-gradient-1 radius-10"><?php echo esc_html( $settings['product_features_button1_text'] );?></a>                <a href="<?php echo esc_url( $settings['product_features_button2_link']['url'] ); ?>" class="cmn-btn btn-outline-1 color-one radius-10"><?php echo esc_html( $settings['product_features_button2_text'] );?></a>            </div>        </div>        <?php    }}Plugin::instance()->widgets_manager->register_widget_type( new wphex_Product_Features() );